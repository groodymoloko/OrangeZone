
<form action="register" method="POST">
    <div class="container">
        <h1>Register</h1>
        <p>Please fill in this form to create an account.</p>
        <hr>
        <h1>{{title}}</h1>
        {{# if errors}}
            {{# each errors}}
                {{this.msg}}
            {{/each}}
        {{/if}}
        <hr>
        <!-- <label for="username"><b>Username</b></label> -->
        <input type="text" placeholder="Enter Username" name="username" required>
        <!-- <label for="psw"><b>Password</b></label> -->
        <input type="password" placeholder="Enter Password" name="password" required>
        <input type="passwordMatch" placeholder="Re-enter Password" name="passwordMatch" required>
        <hr>
        <div class="container press my-4">
            <h1>Choose Your Character!</h1>
            <div class="row mt-5">
                <div class="col-12">
                    <!-- Characters will Display Here -->
                    <div class="flex-container mb-5" id="character-view">
                        {{#each character.characters}}
                        <div class="card text-center" style="width: 13rem;">
                            <label class="image-button">
                                <input type="radio" name="profilepic" value="{{this.image_link}}">
                                <img src="{{this.image_link}}"
                                        class="card-img-top character-image" alt="{{this.character_name}}">
                            </label>
                            <div class="card-body">
                                <h5 class="card-title" id="charname">{{this.character_name}}</h5>
                                <p class="card-text" id="chardescription">{{this.character_description}}</p>
                            </div>
                            <ul class="list-group list-group-flush">
                                <li class="list-group-item">Speed: <span id="charSpeed">{{this.speed}}</span></li>
                                <li class="list-group-item">Intelligence: <span
                                        id="charInt">{{this.intelligence}}</span></li>
                                <li class="list-group-item">Luck: <span id="charLuck">{{this.luck}}</span></li>
                            </ul>
                        </div>
                        {{/each}}
                    </div>
                </div>
            </div>
            <p>By creating an account you agree to our <a href="#">Terms & Privacy</a>.</p>
            <button type="submit" class="registerbtn">Create Account</button>
        </div>

        <div class="container signin">
            <p>Already have an account? <a href="/login">Sign in</a>.</p>
        </div>
    </div>
</form>










